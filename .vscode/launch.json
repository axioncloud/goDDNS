    "version": "0.2.0",
    "configurations": [

        {
            "name": "Build & Launch goDDNS",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "preLaunchTask": "npm: build - frontend"
        },
        {
            "name": "Launch goDDNS - backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "buildFlags": "-ldflags -H=windowsgui"
        },
        {
            "name": "Build goDDNS - backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend",
            "buildFlags": "-ldflags -H=windowsgui"
        },
    ]
}